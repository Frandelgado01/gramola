{
  // For more information, visit: https://go.microsoft.com/fwlink/?LinkId=733558
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Frontend: start (cmd)",
      "type": "shell",
      "command": "cmd.exe",
      "args": ["/d", "/c", "npm run start"],
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "Changes detected"
          },
          "endsPattern": {
            "regexp": "bundle generation (complete|failed)"
          }
        }
      },
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "Frontend: test (cmd)",
      "type": "shell",
      "command": "cmd.exe",
      "args": ["/d", "/c", "npm run test"],
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "Changes detected"
          },
          "endsPattern": {
            "regexp": "bundle generation (complete|failed)"
          }
        }
      },
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "Backend: spring-boot run (mvnw.cmd)",
      "type": "shell",
      "command": "cmd.exe",
      "args": ["/d", "/c", "mvnw.cmd spring-boot:run"],
      "isBackground": true,
      "options": {
        "cwd": "c:/Users/frand/OneDrive/Escritorio/gramola/gramola"
      },
      "problemMatcher": []
    },
    {
      "label": "Dev: start (cmd)",
      "type": "shell",
      "command": "cmd.exe",
      "args": ["/d", "/c", "npm run dev"],
      "isBackground": true,
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    }
  ]
}
